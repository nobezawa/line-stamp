<h1>Listing project_images</h1>

<table>
  <thead>
    <tr>
      <th>Project</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project_images.each do |project_image| %>
      <tr>
        <td><%= project_image.project_id %></td>
        <td><%= project_image.image %></td>
        <td><%= link_to 'Show', project_image %></td>
        <td><%= link_to 'Edit', edit_project_image_path(project_image) %></td>
        <td><%= link_to 'Destroy', project_image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project image', new_project_image_path %>
